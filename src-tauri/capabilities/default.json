{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:allow-open",
    "fs:allow-write",
    "fs:allow-read",
    "fs:allow-rename",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-stat",
    "fs:allow-fstat",
    "fs:allow-lstat",
    "fs:read-meta",
    "dialog:allow-open",
    "dialog:allow-ask",
    "dialog:allow-save",
    "dialog:allow-confirm",
    "dialog:allow-message",
    { "identifier": "fs:allow-watch", "allow": ["*", "**/*"] },
    "opener:default"
  ]
}
